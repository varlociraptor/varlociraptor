{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 500,
  "height": 400,
  "padding": 5,
  "autosize": "pad",

  "data": [
    {
      "values": []
    }
  ],
  "mark": "point",
  "encoding": {
    "x": {
      "field": "pos",
      "type": "quantitative",
      "title": "Position",
      "axis": {"grid": false}
    },
    "y": {
      "field": "prob",
      "type": "quantitative",
      "title": "Probability",
      "axis": {"grid": false},
      "scale": {
        "type": "log"
      }
    },
    "column": {
      "field": "chromosome",
      "type": "nominal",
      "title": "Chromosome"
    }
  }
}

