{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Estimation of sample contamination.",
    "datasets": {
        "empirical_vaf_dist": [],
        "densities": [],
        "vaf_dist_quantiles": []
    },
    "vconcat": [
        {
            "title": {
                "text": "density",
                "orient": "left"
            },
            "data": {
                "name": "densities"
            },
            "encoding": {
                "color": {
                    "field": "category",
                    "legend": {
                        "title": ""
                    }
                },
                "x": {
                    "field": "purity",
                    "axis": {
                        "grid": false
                    },
                    "scale": {
                        "domain": [
                            0.0,
                            1.0
                        ],
                        "type": "linear"
                    }
                },
                "y": {
                    "field": "density",
                    "axis": {
                        "labels": false,
                        "title": ""
                    },
                    "scale": {
                        "type": "symlog"
                    }
                }
            },
            "mark": {
                "type": "line",
                "interpolate": "monotone"
            }
        },
        {
            "title": {
                "text": "empirical VAF distribution",
                "orient": "left"
            },
            "data": {
                "name": "empirical_vaf_dist"
            },
            "transform": [
                {
                    "calculate": "'hist'",
                    "as": "hist"
                }
            ],
            "encoding": {
                "color": {
                    "field": "hist",
                    "scale": {
                        "domain": [
                            "hist"
                        ],
                        "range": [
                            "lightgrey"
                        ]
                    },
                    "legend": null
                },
                "x": {
                    "field": "vaf",
                    "scale": {
                        "domain": [
                            0.0,
                            1.0
                        ],
                        "type": "linear"
                    },
                    "axis": {
                        "title": null
                    }
                },
                "y": {
                    "field": "count",
                    "scale": {
                        "type": "linear"
                    },
                    "axis": {
                        "title": null
                    }
                }
            },
            "mark": {
                "align": "left",
                "type": "bar",
                "tooltip": true
            }
        },
        {
            "title": {
                "text": "quantiles",
                "orient": "left"
            },
            "data": {
                "name": "vaf_dist_quantiles"
            },
            "encoding": {
                "x": {
                    "field": "vaf",
                    "axis": {
                        "title": null
                    },
                    "scale": {
                        "domain": [
                            0.0,
                            1.0
                        ],
                        "type": "linear"
                    }
                }
            },
            "mark": "tick"
        }
    ],
    "resolve": {
        "scale": {
            "y": "independent",
            "color": "independent"
        }
    }
}